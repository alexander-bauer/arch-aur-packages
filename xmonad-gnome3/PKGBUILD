# Maintainer: Tony Sokhon <tonyskn@gmail.com>
pkgname=xmonad-gnome3
pkgver=20130210
pkgrel=1
pkgdesc="Installs extra session config files to make GNOME 3 play nicely with xmonad"
arch=('i686' 'x86_64')
url="http://xmonad.org"
license=('custom:BSD3')
depends=(xmonad gnome-session gnome-settings-daemon notification-daemon gnome-screensaver unclutter xorg-xsetroot)
source=(xmonad.session xmonad-gnome-session.desktop xmonad.desktop xmonad-gnome-screensaver.desktop xmonad-unclutter.desktop xmonad-xsetroot.desktop)
md5sums=('9527196afddae1c3ba82aecd56ad36a6'
         '695f6f550527ea0e53628bbcba6d3f28'
         '0dd8c828a828edddcbc8e94b645e2b4d'
         '5c2d53dbb78e1cc77f2cbde4b6edd519'
         'd21b8a9ef67e0db6d65d74c77dcc447f'
         '45292e85eec74c9423b326171ac3404b')

build() {
  cd ${srcdir}
  install -D -m644 xmonad.session "${pkgdir}/usr/share/gnome-session/sessions/xmonad.session"
  install -D -m644 xmonad-gnome-session.desktop "${pkgdir}/usr/share/xsessions/xmonad-gnome-session.desktop"

  install -D -m644 xmonad.desktop "${pkgdir}/usr/share/applications/xmonad.desktop"
  install -D -m644 xmonad-gnome-screensaver.desktop "${pkgdir}/usr/share/applications/xmonad-gnome-screensaver.desktop"
  install -D -m644 xmonad-unclutter.desktop "${pkgdir}/usr/share/applications/xmonad-unclutter.desktop"
  install -D -m644 xmonad-xsetroot.desktop "${pkgdir}/usr/share/applications/xmonad-xsetroot.desktop"
}
